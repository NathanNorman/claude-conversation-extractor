{
  "name": "claude-conversation-extractor",
  "version": "1.1.2",
  "description": "Search, browse, and export Claude Code conversation history with interactive live search, MiniSearch fuzzy matching, and archived conversation support",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "claude-logs": "./bin/claude-logs.js",
    "claude-logs-dev": "./bin/claude-logs.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NathanNorman/claude-conversation-extractor.git"
  },
  "bugs": {
    "url": "https://github.com/NathanNorman/claude-conversation-extractor/issues"
  },
  "homepage": "https://github.com/NathanNorman/claude-conversation-extractor#readme",
  "scripts": {
    "start": "node --max-old-space-size=8192 src/cli.js",
    "start:normal": "node src/cli.js",
    "test": "./scripts/test-with-index-protection.sh",
    "test:unsafe": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:quick": "node --experimental-vm-modules node_modules/.bin/jest tests/basic.test.js tests/utils.test.js tests/date-filters.test.js",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "./scripts/test-with-index-protection.sh --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "typecheck": "echo 'No typechecking configured yet'",
    "build": "echo 'Build not needed for JS version'",
    "dev": "node src/cli.js",
    "precommit": "npm run lint && npm run test:quick",
    "setup:hooks": "node scripts/setup-hooks.js"
  },
  "dependencies": {
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "dayjs": "^1.11.18",
    "fs-extra": "^11.3.1",
    "inquirer": "^12.9.1",
    "minisearch": "^7.2.0",
    "natural": "^8.1.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^30.1.2",
    "archiver": "^7.0.1",
    "eslint": "^9.36.0",
    "jest": "^30.1.3"
  },
  "keywords": [
    "claude",
    "claude-code",
    "conversation",
    "extractor",
    "export",
    "search",
    "interactive",
    "minisearch",
    "fuzzy-search",
    "chat-history",
    "backup",
    "archive",
    "jsonl",
    "markdown",
    "cli",
    "terminal"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Nathan Norman",
  "license": "MIT"
}
